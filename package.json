{
  "name": "soundboard",
  "version": "0.0.1",
  "description": "The Greatest Soundboard",
  "productName": "Soundboard",
  "author": "Parker Sprouse <parker@parkersprouse.me>",
  "type": "module",
  "private": true,
  "engines": {
    "node": "^20",
    "pnpm": "^9"
  },
  "scripts": {
    "postinstall": "quasar prepare",
    "start": "pnpm run dev",
    "predev": "pnpm run clean:assets",
    "dev": "quasar dev",
    "predev:mobile": "pnpm run clean:assets",
    "dev:mobile": "quasar dev --mode capacitor --target android",
    "prebuild": "pnpm run clean:assets",
    "build": "run-s build:apk build:verify build:sign",
    "build:apk": "quasar build --mode capacitor --target android",
    "build:verify": "zipalign -v 4 './dist/capacitor/android/apk/release/app-release-unsigned.apk' './dist/capacitor/android/apk/release/Soundboard.apk'",
    "build:sign": "apksigner sign --ks './src-capacitor/android/soundboard.keystore' --ks-key-alias soundboard './dist/capacitor/android/apk/release/Soundboard.apk'",
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "lint:fix": "eslint -c ./eslint.config.js --fix \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "clean:assets": "quasar clean",
    "preclean": "pnpm run clean:assets",
    "clean": "rimraf -I -g \"**/node_modules\"",
    "clean:hard": "rimraf -I -g \"**/pnpm-lock.yaml\" && pnpm run clean"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.1.1",
    "@quasar/extras": "^1.16.4",
    "@vueuse/core": "^12.3.0",
    "pinia": "^2.0.11",
    "quasar": "^2.16.0",
    "vue": "^3.4.18",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@quasar/app-vite": "^2.0.0",
    "@quasar/icongenie": "^4.0.0",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@types/node": "^20.5.9",
    "@vue/eslint-config-typescript": "^14.1.3",
    "autoprefixer": "^10.4.2",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.12.0",
    "lightningcss": "^1.28.2",
    "npm-run-all2": "^7.0.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.8.0",
    "vue-tsc": "^2.0.29"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "vue-tsc": "^2.2"
      }
    },
    "updateConfig": {
      "ignoreDependencies": [
        "@types/node"
      ]
    }
  }
}
